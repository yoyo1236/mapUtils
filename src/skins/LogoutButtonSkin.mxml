<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:fx="http://ns.adobe.com/mxml/2009"
		width="16" height="16">
	<fx:Metadata>[HostComponent("spark.components.Button")]</fx:Metadata>
	<s:states>
		<s:State name="up"/>
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="disabled"/>
	</s:states>
	<s:BitmapImage includeIn="disabled,down,over,up" x="0" y="0" smooth="true"
				   source="@Embed('./assets/exit.png')">
		<s:filters>
			<s:GlowFilter includeIn="over,down" alpha="1.0" blurX="6.0" blurY="6.0" color="#FFCB00"
						  inner="false" knockout="false" quality="2" strength="3.4"/>
		</s:filters>
	</s:BitmapImage>
</s:Skin>
